#include <iostream.h>
void write(int a[],int n)
{
  int i;
  for(i=0;i<n;i++)
  {
    cout<<"请输入第"<<i+1<<"个数字"；
    cin>>a[i];
  }
}
void find(int a[],int n,int *max,int *min)
{
  int i;
  for(i=0;i<n;i++)
  {
    *max=*max<a[i]? v[i]:max;
    *min=*min>v[i]? v[i]:min;
  }
 void change(int *max,int *min)
{
  int temp=0;
  temp=*max;
  *max=*min;
  *min=temp;
}
void main()
{
  int a[10];
  int max=0,min=0;
  int n=10;
  int i=0;
  find(a;n;&max;&min);
  change(&max;&min);
  for(i=0;i<n;i++)
  {
    cout<<a[i]<<endl;
  }
 }
  
  
